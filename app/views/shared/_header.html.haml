%header.header
  .header__top
    .header__top--logo
      = link_to image_tag("material/logo/logo.png", alt: "logo image"), root_path
    .header__top--search
      %form
        %input{name: "keyword", placeholder: "探し物は何ですか？", type: "search",class: "search-ward"}
        = button_tag type: "submit", class: "search-icon" do
          %i.fa.fa-search

  .header__bottom
    .search-list
      .category-list
        =link_to  "カテゴリーから探す"
        %ul
          %li.hiddn レディース
          %li.hiddn メンズ
          %li.hiddn その他

      .brand-list
        =link_to "ブランドから探す"
        %ul
          %li.hiddn ルイヴィトン
          %li.hiddn シャネル
          %li.hiddn ラルフローレン
    .member-menu
      .new-member
        =link_to "新規会員登録"
      .login-btn
        =link_to "ログイン"