.account
  .account_logo
    = link_to root_path do
      = image_tag("material/logo/logo.png", alt: "logo image")
  .account-page
    %h2 お届け先登録
    .account-pagenew
      =form_with model: @shipping_address, local:true do |f|
        .field
          = render 'shared/error_messages', model: f.object
          .field-label
            = f.label :郵便番号
          .field-input
            = f.text_field :postal_code, autofocus: true
        .field
          .field-label
            = f.label :都道府県
          .field-input
            = f.collection_select :prefecture, Prefecture.all, :id, :name, prompt: "選択してください", class:'select-box'
        .field
          .field-label
            = f.label :市区町村
          .field-input
            = f.text_field :municipalities
        .field
          .field-label
            = f.label :番地
          .field-input
            = f.text_field :block
        .field
          .field-label
            = f.label :建物名、部屋番号
          .field-input
            = f.text_field :building_name_room_number
        .field
          .field-label
            = f.label :お届け先電話番号
          .field-input
            = f.text_field :phone_number

        .actions
          = f.submit "登録", class: 'btn'
